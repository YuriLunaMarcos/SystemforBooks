<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Claveinterna</th>
      <th>Ejemplar</th>
      <th>Autor</th>
      <th>Editorial</th>
      <th>Tema</th>
      <th>Isbn</th>
      <th>Categoria</th>
      <th>Provider</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.claveinterna %></td>
        <td><%= book.ejemplar %></td>
        <td><%= book.autor %></td>
        <td><%= book.editorial %></td>
        <td><%= book.tema %></td>
        <td><%= book.isbn %></td>
        <td><%= book.categoria %></td>
        <td><%= book.provider %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

